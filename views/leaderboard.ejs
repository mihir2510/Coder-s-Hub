    <script>
        const leaderboard = document.getElementById('leaderboard')
        async function fetchXML(url){
            let res = await fetch(url)
            res = await res.text()
            console.log(res)
            if (window.DOMParser){
                parser=new DOMParser();
                xmlDoc=parser.parseFromString(res,"text/xml");
            }
            else { // Internet Explorer
                xmlDoc = new ActiveXObject("Microsoft.XMLDOM");
                xmlDoc.async=false;
                xmlDoc.loadXML(res);
            }
            let items = xmlDoc.getElementsByTagName("items")[0]
            console.log(items)
            for(let i=0; i<items.childNodes.length; i+=2){
                let id = Math.floor(i/2) + 1
                let username = items.childNodes[i].innerHTML
                let rating = items.childNodes[i+1].innerHTML
                console.log(id, username, rating)
                leaderboard.innerHTML += `<tr>
                    <td>${id}</td>
                    <td>${username}</td>
                    <td>${rating}</td>
                </tr>`
            }
            // return res

        }
        fetchXML('/leaderboardRSS')
    </script>
